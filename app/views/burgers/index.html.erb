<div class="row">
  <hr>
  <div class="col-md-3 sidebar">
    <% if @burgers_top_five.any? %>
    <div class="row">
    <div class="col">
  <h2>Top Five Burgers</h2>
      <ul>
        <% @burgers_top_five.each do |burger| %>
          <li><%=link_to burger.fetch('name'), burger_path(burger.fetch('id'))%></li>
        <% end %>
      </ul>
      </div>
    </div>
    <% end %>
    </div>
  <div class="col main-content">
    <% if @burgers.any? %>
      <div class="row">
      <h2>Available Burgers</h2>
        <% @burgers.each do |burger| %>
          <%= render :partial => "layouts/burger_card", :locals => {:burger => burger} %>
        <% end %>
      </div>
    <% else %>
      <p>There are no burgers yet.</p>
    <% end %>
  </div>
</div>